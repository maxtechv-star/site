<script>
async function copyToClipboard(text) {
    try {
        await navigator.clipboard.writeText(text);
        QuickDeploy.showToast('URL copied to clipboard!', 'success');
    } catch (err) {
        console.error('Copy failed:', err);
        QuickDeploy.showToast('Failed to copy', 'error');
    }
}

async function deleteDeployment(id) {
    try {
        const confirmed = await QuickDeploy.showConfirm({
            title: 'Delete Deployment',
            message: 'Are you sure you want to delete this deployment?',
            confirmText: 'Delete',
            cancelText: 'Cancel',
            type: 'danger'
        });
        
        if (!confirmed) return;
        
        QuickDeploy.showLoading('Deleting deployment...');
        const data = await QuickDeploy.deleteDeployment(id);
        
        if (data) {
            QuickDeploy.showToast('Deployment deleted successfully!', 'success');
            setTimeout(() => location.reload(), 1500);
        }
    } catch (error) {
        console.error('Delete error:', error);
        QuickDeploy.showToast('Failed to delete deployment', 'error');
    } finally {
        QuickDeploy.hideLoading();
    }
}

