<!-- Header -->
<header class="header">
    <div>
        <h1><i class="fas fa-tachometer-alt"></i> Dashboard</h1>
        <p>Welcome to QuickDeploy - Deploy static sites instantly</p>
    </div>
    <div>
        <a href="/upload" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Deployment
        </a>
    </div>
</header>

<!-- Stats Cards -->
<div class="stats-cards">
    <div class="stat-card card-primary">
        <i class="fas fa-server"></i>
        <h3><%= stats.active_deployments || 0 %></h3>
        <p>Active Deployments</p>
    </div>
    <div class="stat-card card-success">
        <i class="fas fa-hdd"></i>
        <h3><%= stats.total_size ? formatBytes(stats.total_size) : '0 Bytes' %></h3>
        <p>Storage Used</p>
    </div>
    <div class="stat-card card-warning">
        <i class="fas fa-file-archive"></i>
        <h3><%= stats.total_files || 0 %></h3>
        <p>Total Files</p>
    </div>
    <div class="stat-card card-danger">
        <i class="fas fa-clock"></i>
        <h3><%= stats.expiring_soon || 0 %></h3>
        <p>Expiring Soon</p>
    </div>
</div>

<!-- Recent Deployments -->
<div class="card">
    <div class="card-header">
        <h2><i class="fas fa-history"></i> Recent Deployments</h2>
        <a href="/deployments" class="btn btn-outline">View All</a>
    </div>
    <div class="card-body">
        <% if (recentDeployments && recentDeployments.length > 0) { %>
            <div class="table-responsive">
                <table class="deployments-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>URL</th>
                            <th>Files</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% recentDeployments.forEach(deploy => { 
                            const isExpired = new Date(deploy.expires_at) < new Date();
                        %>
                        <tr>
                            <td>
                                <strong><%= deploy.name || 'Untitled' %></strong>
                                <% if (deploy.description) { %>
                                <br><small class="text-muted"><%= deploy.description %></small>
                                <% } %>
                            </td>
                            <td>
                                <a href="<%= deploy.url %>" target="_blank" class="url-link">
                                    <i class="fas fa-external-link-alt"></i> View Site
                                </a>
                                <br>
                                <small class="text-muted copy-url" style="cursor: pointer;" 
                                       onclick="copyToClipboard('<%= deploy.url %>')" 
                                       title="Click to copy">
                                    <%= deploy.url.replace('https://', '') %>
                                </small>
                            </td>
                            <td><span class="badge"><%= deploy.file_count || 0 %></span></td>
                            <td>
                                <span class="status-badge status-<%= isExpired ? 'expired' : (deploy.status || 'active') %>">
                                    <%= isExpired ? 'expired' : (deploy.status || 'active') %>
                                </span>
                            </td>
                            <td>
                                <%= new Date(deploy.created_at).toLocaleDateString() %>
                                <br>
                                <small class="text-muted">
                                    <%= new Date(deploy.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                </small>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/deployment/<%= deploy.id %>" class="btn-icon" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="<%= deploy.url %>" target="_blank" class="btn-icon" title="Open Site">
                                        <i class="fas fa-external-link-alt"></i>
                                    </a>
                                    <button onclick="deleteDeployment('<%= deploy.id %>')" 
                                            class="btn-icon btn-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-cloud-upload-alt"></i>
                <h3>No Deployments Yet</h3>
                <p>Upload your first static site to get started!</p>
                <a href="/upload" class="btn btn-primary">
                    <i class="fas fa-cloud-upload-alt"></i> Deploy Now
                </a>
            </div>
        <% } %>
    </div>
</div>

<!-- Quick Actions -->
<div class="card mt-4">
    <div class="card-header">
        <h2><i class="fas fa-bolt"></i> Quick Actions</h2>
    </div>
    <div class="card-body">
        <div class="quick-actions">
            <a href="/upload?type=files" class="quick-action">
                <div class="quick-action-icon bg-primary">
                    <i class="fas fa-folder-open"></i>
                </div>
                <h4>Upload Files</h4>
                <p>Upload individual HTML, CSS, JS files</p>
            </a>
            <a href="/upload?type=zip" class="quick-action">
                <div class="quick-action-icon bg-success">
                    <i class="fas fa-file-archive"></i>
                </div>
                <h4>Upload ZIP</h4>
                <p>Upload a zipped project folder</p>
            </a>
            <a href="/admin" class="quick-action">
                <div class="quick-action-icon bg-warning">
                    <i class="fas fa-cog"></i>
                </div>
                <h4>Admin Panel</h4>
                <p>Manage all deployments</p>
            </a>
            <a href="https://muigampswuqdswbulgjg.supabase.co" target="_blank" class="quick-action">
                <div class="quick-action-icon bg-info">
                    <i class="fas fa-database"></i>
                </div>
                <h4>Supabase</h4>
                <p>View database & storage</p>
            </a>
        </div>
    </div>
</div>

<!-- System Status -->
<div class="card mt-4">
    <div class="card-header">
        <h2><i class="fas fa-info-circle"></i> System Info</h2>
    </div>
    <div class="card-body">
        <div class="system-info">
            <div class="info-item">
                <span class="info-label">Platform:</span>
                <span class="info-value">Vercel + Supabase</span>
            </div>
            <div class="info-item">
                <span class="info-label">Storage:</span>
                <span class="info-value">Supabase Storage</span>
            </div>
            <div class="info-item">
                <span class="info-label">Database:</span>
                <span class="info-value">Supabase PostgreSQL</span>
            </div>
            <div class="info-item">
                <span class="info-label">File Limit:</span>
                <span class="info-value">100MB per file</span>
            </div>
        </div>
    </div>
</div>

