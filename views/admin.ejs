<script>
function getTimeRemaining(expiryDate) {
    const now = new Date();
    const expiry = new Date(expiryDate);
    const diffMs = expiry - now;
    
    if (diffMs < 0) return 'Expired';
    
    const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
    const diffHours = Math.floor((diffMs % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    
    if (diffDays > 0) return `${diffDays}d ${diffHours}h`;
    return `${diffHours}h`;
}

function filterDeployments() {
    const status = document.getElementById('statusFilter').value;
    const rows = document.querySelectorAll('.admin-table tbody tr');
    
    rows.forEach(row => {
        if (status === 'all') {
            row.style.display = '';
        } else {
            const statusCell = row.querySelector('.status-badge').textContent.toLowerCase();
            row.style.display = statusCell.includes(status) ? '' : 'none';
        }
    });
}

function cleanupExpired() {
    if (confirm('This will permanently delete all expired deployments. Continue?')) {
        fetch('/api/admin/cleanup', { method: 'POST' })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                toastr.success(`Cleaned up ${data.deleted} expired deployments`);
                setTimeout(() => location.reload(), 1500);
            }
        });
    }
}

function optimizeDatabase() {
    fetch('/api/admin/optimize', { method: 'POST' })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            toastr.success('Database optimized successfully');
        }
    });
}

function clearTempFiles() {
    fetch('/api/admin/clear-temp', { method: 'POST' })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            toastr.success('Temporary files cleared');
        }
    });
}

function exportDeployments() {
    fetch('/api/admin/export')
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const blob = new Blob([JSON.stringify(data.data, null, 2)], { type: 'application/json' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `deployments-${new Date().toISOString().split('T')[0]}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
            toastr.success('Export completed');
        }
    });
}

function renewDeployment(id) {
    fetch(`/api/admin/renew/${id}`, { method: 'POST' })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            toastr.success('Deployment renewed for 7 days');
            setTimeout(() => location.reload(), 1000);
        }
    });
}

function exportAllData() {
    toastr.info('Exporting all deployment data...');
    // Implementation for full data export
}

function refreshSystemStatus() {
    toastr.info('Refreshing system status...');
    location.reload();
}
</script>