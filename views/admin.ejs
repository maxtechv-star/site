        font-weight: 600;
    }
    
    .admin-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .admin-table th {
        text-align: left;
        padding: 15px;
        background: var(--light);
        color: var(--gray);
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .admin-table td {
        padding: 15px;
        border-bottom: 1px solid var(--border);
        font-size: 0.9rem;
    }
    
    .expired-row {
        background: rgba(242,19,93,0.02);
    }
    
    .expired-row:hover {
        background: rgba(242,19,93,0.05);
    }
    
    .system-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }
    
    .system-action-btn {
        padding: 25px 20px;
