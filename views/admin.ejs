    }
    
    .status-indicator.inactive {
        background: var(--danger);
    }
    
    .status-content h4 {
        margin-bottom: 5px;
        color: #333;
    }
    
    .status-content p {
        color: var(--gray);
        font-size: 0.9rem;
    }
    
    .status-text {
