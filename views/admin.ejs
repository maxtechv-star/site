<script>
function getTimeRemaining(expiryDate) {
    const now = new Date();
    const expiry = new Date(expiryDate);
    const diffMs = expiry - now;
    
    if (diffMs < 0) return 'Expired';
    
    const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));
    const diffHours = Math.floor((diffMs % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    
    if (diffDays > 0) return `${diffDays} day${diffDays !== 1 ? 's' : ''} left`;
    if (diffHours > 0) return `${diffHours} hour${diffHours !== 1 ? 's' : ''} left`;
    return 'Less than an hour';
}

function filterDeployments() {
    const status = document.getElementById('statusFilter').value;
    const rows = document.querySelectorAll('.admin-table tbody tr');
    
    rows.forEach(row => {
        if (status === 'all') {
            row.style.display = '';
        } else {
            const statusCell = row.querySelector('.status-badge').textContent.toLowerCase();
            row.style.display = statusCell.includes(status) ? '' : 'none';
        }
    });
}

async function deleteDeployment(id) {
    if (!confirm('Are you sure you want to delete this deployment? This action cannot be undone.')) {
        return;
    }
    
    try {
        QuickDeploy.showLoading('Deleting deployment...');
        const response = await fetch(`/api/deployments/${id}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const data = await response.json();
        
        if (data.success) {
            QuickDeploy.showToast('Deployment deleted successfully', 'success');
            setTimeout(() => location.reload(), 1500);
        } else {
            QuickDeploy.showToast(data.error || 'Failed to delete deployment', 'error');
        }
    } catch (error) {
        QuickDeploy.showToast('Failed to delete deployment', 'error');
        console.error(error);
    } finally {
        QuickDeploy.hideLoading();
    }
}

async function renewDeployment(id) {
    try {
        QuickDeploy.showLoading('Renewing deployment...');
        const response = await fetch(`/api/deployments/${id}/renew`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const data = await response.json();
        
        if (data.success) {
            QuickDeploy.showToast('Deployment renewed for 7 days', 'success');
            setTimeout(() => location.reload(), 1500);
        } else {
            QuickDeploy.showToast(data.error || 'Failed to renew deployment', 'error');
        }
    } catch (error) {
        QuickDeploy.showToast('Failed to renew deployment', 'error');
        console.error(error);
    } finally {
        QuickDeploy.hideLoading();
    }
}

async function cleanupExpired() {
    if (!confirm('This will permanently delete all expired deployments. Continue?')) {
        return;
    }
    
    try {
        QuickDeploy.showLoading('Cleaning up expired deployments...');
        const response = await fetch('/api/admin/cleanup', { 
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const data = await response.json();
        
        if (data.success) {
            QuickDeploy.showToast(`Cleaned up ${data.deleted || 0} expired deployments`, 'success');
            setTimeout(() => location.reload(), 1500);
        } else {
            QuickDeploy.showToast(data.error || 'Cleanup failed', 'error');
        }
    } catch (error) {
        QuickDeploy.showToast('Cleanup failed', 'error');
        console.error(error);
    } finally {
        QuickDeploy.hideLoading();
    }
}

async function refreshCache() {
    try {
        QuickDeploy.showLoading('Refreshing cache...');
        const response = await fetch('/api/admin/refresh-cache', { 
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const data = await response.json();
        
        if (data.success) {
            QuickDeploy.showToast('Cache refreshed successfully', 'success');
            setTimeout(() => location.reload(), 1500);
        } else {
            QuickDeploy.showToast(data.error || 'Cache refresh failed', 'error');
        }
    } catch (error) {
        QuickDeploy.showToast('Cache refresh failed', 'error');
        console.error(error);
    } finally {
        QuickDeploy.hideLoading();
    }
}

async function healthCheck() {
    try {
        QuickDeploy.showLoading('Running health check...');
        const response = await fetch('/api/health');
        const data = await response.json();
        
        if (data.status === 'healthy') {
            QuickDeploy.showToast('System is healthy!', 'success');
        } else {
            QuickDeploy.showToast('System issues detected', 'warning');
        }
    } catch (error) {
        QuickDeploy.showToast('Health check failed', 'error');
        console.error(error);
    } finally {
        QuickDeploy.hideLoading();
    }
}

function refreshSystemStatus() {
    QuickDeploy.showToast('Refreshing system status...', 'info');
    location.reload();
}
</script>